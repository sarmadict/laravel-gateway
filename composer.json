{
    "name": "sarmad/laravel-gateway",
    "description": "A Laravel package for connecting to all Iranian payment gateways",
    "license": "MIT",
    "homepage": "https://github.com/sarmadict/laravel-gateway",
    "authors": [
        {
            "name": "Saeid Asadi",
            "email": "saeidasadi1995@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "illuminate/contracts": "~5.4",
        "illuminate/http": "~5.4",
        "illuminate/view": "~5.4",
        "illuminate/support": "~5.4",
        "illuminate/database": "~5.4",
        "nesbot/carbon": "~2.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Sarmad\\Gateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sarmad\\Gateway\\GatewayServiceProvider"
            ],
            "aliases": {
                "Gateway": "Sarmad\\Gateway\\Facades\\Gateway"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "laravel",
        "iran",
        "payment",
        "gateway",
        "port",
        "bank",
        "pay",
        "mellat",
        "saman",
        "parsian",
        "sadad",
        "meli",
        "payline",
        "zarinpal",
        "iranian-banks",
        "persian-banks",
        "pardakht",
        "dargah",
        "shaparak",
        "poolport",
        "asan-pardakht",
        "irankish",
        "saderat",
        "mabna",
        "mabna2",
        "ipay",
        "pay-ir",
        "pardano",
        "nextpay",
        "jibit",
        "sabapay"
    ]
}
